<div class="container relative flex items-center justify-between">
  <a href="/">
    <img src="/Logo.webp" alt="Frank's Logo" class="logo w-48" />
  </a>
  <nav class="flex gap-8 items-center navigation">
    <a href="/freelance" class="nav-link">Freelance</a>

    <a href="/#projects" class="nav-link">Proyectos</a>
    <a href="/#skills" class="nav-link">Skills</a>

    <a href="/#blog" class="nav-link">Blog</a>
    <a href="/resources" class="nav-link">Recursos</a>
  </nav>
  <button class="mobile-nav flex"
    ><svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      width="28"
      height="28"
      color="#ffffff"
      fill="none"
      class="icon-mobile-nav open-icon"
    >
      <path
        d="M4 5L20 5"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
      <path
        d="M4 12L20 12"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
      <path
        d="M4 19L20 19"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      width="28"
      height="28"
      color="#ffffff"
      fill="none"
      class="icon-mobile-nav close-icon"
    >
      <path
        d="M19.0005 4.99988L5.00045 18.9999M5.00045 4.99988L19.0005 18.9999"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
  </button>
</div>

<style is:global>
  .nav-link {
    position: relative;
    z-index: 1;
  }

  .nav-link::before {
    content: "";
    width: 0;
    height: 12px;
    border-radius: 12px;
    background-color: #311c5b;
    position: absolute;
    z-index: -1;
    bottom: -0.05rem;
    left: 50%;
    transition:
      width 0.35s,
      left 0.35s;
  }

  .nav-link:hover::before {
    width: 100%;
    left: 0;
  }

  .icon-mobile-nav {
    cursor: pointer;
  }
  @media (width>=1030px) {
    .mobile-nav {
      display: none;
    }
  }
  @media (1030px>=width) {
    .logo {
      width: 10rem;
    }
    .navigation {
      background-color: #121212;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      transform: translateX(100%);

      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      transition: all 0.3s;
      opacity: 0;
      pointer-events: none;
      visibility: hidden;
      z-index: 1000;
      padding: -3rem;
    }
    .mobile-nav {
      display: block;
      z-index: 1000;
    }
    .navigation nav {
      flex-direction: column;
      gap: 5rem;
      font-size: 1.5rem;
    }

    .nav-open .navigation {
      opacity: 1;
      pointer-events: auto;
      visibility: visible;
      transform: translate(0);
    }
    .nav-open .close-icon {
      display: block;
    }
    .nav-open .open-icon {
      display: none;
    }
    .close-icon {
      display: none;
    }
    .open-icon {
      display: block;
    }
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const navButton = document.querySelector(".mobile-nav");
    const container = document.querySelector(".container");
    const navLink = document.querySelectorAll(".nav-link");

    navButton.addEventListener("click", function () {
      container.classList.toggle("nav-open");
    });

    navLink.forEach((link) => {
      link.addEventListener("click", function () {
        container.classList.toggle("nav-open");
      });
    });
  });
</script>
