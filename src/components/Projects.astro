---
import LinkBtn from "../components/LinkBtn.astro";
import GithubBtn from "../components/GithubBtn.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-[#F16529] text-white",
    icon: "/Logos/HTML.webp",
  },
  CSS: {
    name: "CSS",
    class: "bg-[#2D53E5] text-white",
    icon: "/Logos/CSS.webp",
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#F7E025] text-black",
    icon: "/Logos/Javascript.webp",
  },
  REACT: {
    name: "React",
    class: "bg-[#0a4051] text-white",
    icon: "/Logos/React.webp",
  },
  VUE: {
    name: "Vue",
    class: "bg-[#0a2c1c] text-white",
    icon: "/Logos/Vue.webp",
  },
  ASTRO: {
    name: "Astro",
    class: "bg-black text-white",
    icon: "/Logos/Astro.webp",
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: "/Logos/Tailwind.webp",
  },
  TYPESCRIPT: {
    name: "Typescript",
    class: "bg-[#1f5389] text-white",
    icon: "/Logos/Typescript.webp",
  },
};

const PROJECTS = [
  {
    title: "Bufete Riazzo",
    description:
      "Freelance | Landing Page para Julio Riazzo y Asociados | Abogados.",
    link: "https://www.bufeteriazzo.com/",
    github: "https://github.com/FrankmDev/riazzo",
    image: "/RiazzoAbogados.avif",
    tags: [TAGS.ASTRO, TAGS.TAILWIND, TAGS.REACT],
  },
  {
    title: "Urban Loft",
    description:
      "Freelance | Landing Page para un piso turístico en Córdoba, Urban Loft.",
    link: "https://urban-loft.vercel.app/",
    github: "https://github.com/FrankmDev/urban-loft",
    image: "/UrbanLoft.avif",
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
  {
    title: "Astral UI | En desarrollo",
    description:
      "Librería de componentes HTML & CSS/Tailwind UI de código abierto",
    link: "https://astral-ui.vercel.app/",
    github: "https://github.com/FrankmDev/astral-ui",
    image: "/AstralUI.avif",
    tags: [TAGS.ASTRO, TAGS.TYPESCRIPT, TAGS.TAILWIND],
  },
  {
    title: "NIMBUS | Fitness Blog",
    description:
      "Blog Fitness dedicado a divulgar información de utilidad sobre nutrición, entrenamiento y vida saludable.",
    link: "https://nimbus-fitness.vercel.app/",
    github: "https://github.com/FrankmDev/nimbus",
    image: "/Nimbus.avif",
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
];
---

<div
  class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-16 mt-6 max-sm:text-center"
>
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group ">
        <div class="w-full">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-3xl group-hover:-translate-y-1 group-hover:shadow-2xl hover:border-gray-800">
            <a href={link} target="_blank">
              <img
                alt="Project Image"
                class="rounded-3xl object-cover object-top w-full h-56 transition duration-500 group-hover:scale-105"
                src={image}
              />
            </a>
          </div>
        </div>

        <div class="w-full ">
          <h3 class="text-2xl font-bold ">{title}</h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2 max-sm:mx-auto">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs  ${tag.class} py-1 px-2 `}
                  >
                    <img
                      src={tag.icon}
                      alt="Logo"
                      class="size-4 object-contain"
                    />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-500">{description}</div>
            <footer class="flex items-end justify-start mt-4 gap-x-4 max-sm:mx-auto ">
              {github && <GithubBtn href={github} />}
              <LinkBtn href={link}>Visit</LinkBtn>
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
