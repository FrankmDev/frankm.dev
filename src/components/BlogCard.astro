---
import "../styles/global.css";
const { title, image, description, post, index } = Astro.props;
const truncateDescr = (description: string): string => {
  return description.length > 100
    ? description.slice(0, 100) + " ..."
    : description;
};
---

<div class="card">
  <a href={`/posts/${post.frontmatter.slug}`} class="card-link">
    <div class="card-img-holder">
      <img src={post.frontmatter.image} alt="Blog image" class="rounded-2xl" />
    </div>
    <div class="flex flex-col gap-5 px-3">
      <h3 class="blog-title">{post.frontmatter.title}</h3>
      <p class="description">
        {truncateDescr(post.frontmatter.description)}
      </p>
      <span class="flex items-center gap-3"
        >Leer m√°s<svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          width="32"
          height="32"
          color="#542ba4"
          fill="none"
        >
          <path
            d="M20 12L4 12"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
          <path
            d="M15 17C15 17 20 13.3176 20 12C20 10.6824 15 7 15 7"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg></span
      >
    </div>
  </a>
</div>

<style>
  .card {
    height: 21rem;
    border-radius: 15px;
    overflow: hidden;
    position: relative;
    transition: transform 0.3s ease;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  }

  .card:hover {
    transform: translateY(-5px);
    background-color: #111111;
  }

  .card-img-holder {
    width: 100%;
    height: 50%;
    position: relative;
  }

  .card-img-holder img {
    width: 100%;
    height: 100%;
    max-height: 10rem;
    object-fit: cover;
  }

  .blog-title {
    color: var(--main-color);
    font-size: 1.2rem;
  }

  .description {
    font-size: 0.8rem;
  }
</style>
