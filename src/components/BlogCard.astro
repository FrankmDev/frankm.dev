---
import "../styles/global.css";
const { title, image, description, post, index } = Astro.props;
const truncateDescr = (description: string): string => {
  return description.length > 100
    ? description.slice(0, 100) + " ..."
    : description;
};
---

<div class="card">
  <a href={`/posts/${post.frontmatter.slug}`} class="card-link">
    <div class="card-img-holder">
      <img src={post.frontmatter.image} alt="Blog image" />
    </div>
    <h3 class="blog-title">{post.frontmatter.title}</h3>
    <p class="description">
      {truncateDescr(post.frontmatter.description)}
    </p>
    <span class="read-more">Leer m√°s</span>
  </a>
</div>

<style>
  .card {
    aspect-ratio: 1/1.25;
    background: #0e0e0e;
    border-radius: 1.5rem;
    padding: 0.5rem;
    overflow: hidden;
    position: relative;
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .card-img-holder {
    width: 100%;
    height: 40%;
    position: relative;
  }

  .card-img-holder img {
    width: 100%;
    height: 100%;
    max-height: 10rem;
    object-fit: cover;
    border-radius: 1.5rem;
  }

  .blog-title {
    color: var(--main-color);
    padding: 1rem 0 0.5rem 0;
    font-size: 1.2rem;
  }

  .description {
    padding: 0.7rem 0;
    font-size: 0.8rem;
  }
</style>
