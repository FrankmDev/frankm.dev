---
import "../styles/global.css";
const { title, image, description, post, index } = Astro.props;
const truncateDescr = (description: string): string => {
  return description.length > 100
    ? description.slice(0, 100) + " ..."
    : description;
};
---

<div class="card">
  <a href={`/posts/${post.frontmatter.slug}`} class="card-link">
    <div class="card-img-holder">
      <img src={post.frontmatter.image} alt="Blog image" />
    </div>
    <div class="flex flex-col gap-5 px-3">
      <h3 class="blog-title">{post.frontmatter.title}</h3>
      <p class="description">
        {truncateDescr(post.frontmatter.description)}
      </p>
      <span class="flex items-center gap-3"
        >Leer m√°s<svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 512 512"
          fill="#542ca5"
          width="24"
          height="24"
        >
          <path
            d="M334.5 414c8.8 3.8 19 2 26-4.6l144-136c4.8-4.5 7.5-10.8 7.5-17.4s-2.7-12.9-7.5-17.4l-144-136c-7-6.6-17.2-8.4-26-4.6s-14.5 12.5-14.5 22l0 72L32 192c-17.7 0-32 14.3-32 32l0 64c0 17.7 14.3 32 32 32l288 0 0 72c0 9.6 5.7 18.2 14.5 22z"
          ></path></svg
        ></span
      >
    </div>
  </a>
</div>

<style>
  .card {
    height: 23rem;
    background: #101010;
    border-radius: 15px;
    overflow: hidden;
    position: relative;
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .card-img-holder {
    width: 100%;
    height: 50%;
    position: relative;
  }

  .card-img-holder img {
    width: 100%;
    height: 100%;
    max-height: 10rem;
    object-fit: cover;
  }

  .blog-title {
    color: var(--main-color);
    font-size: 1.2rem;
  }

  .description {
    font-size: 0.8rem;
  }
</style>
