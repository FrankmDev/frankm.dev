---
import "../styles/global.css";
const { title, image, description, post, index } = Astro.props;
const truncateDescr = (description: string): string => {
  return description.length > 100
    ? description.slice(0, 100) + " ..."
    : description;
};
---

<div class="card">
  <a href={`/posts/${post.frontmatter.slug}`} class="card-link">
    <div class="card-img-holder">
      <img src={post.frontmatter.image} alt="Blog image" />
    </div>
    <div class="flex flex-col justify-between">
      <h3 class="blog-title">{post.frontmatter.title}</h3>
      <p class="description">
        {truncateDescr(post.frontmatter.description)}
      </p>
      <span class="read-more">Leer m√°s</span>
    </div>
  </a>
</div>

<style>
  .card {
    height: 23rem;
    background: #101010;
    border-radius: 15px;
    overflow: hidden;
    position: relative;
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .card-img-holder {
    width: 100%;
    height: 50%;
    position: relative;
  }

  .card-img-holder img {
    width: 100%;
    height: 100%;
    max-height: 10rem;
    object-fit: cover;
  }

  .blog-title {
    color: var(--main-color);
    font-size: 1.2rem;
    padding: 0 0.3rem;
  }

  .description {
    padding: 0 0.3rem;
    font-size: 0.8rem;
  }
</style>
