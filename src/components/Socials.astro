---
import GithubIcon from "./icons/GithubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import MailIcon from "./icons/MailIcon.astro";
import InstagramIcon from "./icons/InstagramIcon.astro";
import XIcon from "./icons/XIcon.astro";
import ThreadsIcon from "./icons/ThreadsIcon.astro";
---

<div class="container flex gap-4 items-center my-4">
  <a href="https://github.com/FrankmDev" class="Btn">
    <div class="sign">
      <GithubIcon />
    </div>
    <div class="text">Github</div>
  </a>

  <a href="https://www.linkedin.com/in/frankmdev/" class="Btn">
    <div class="sign">
      <LinkedInIcon />
    </div>
    <div class="text">LinkedIn</div>
  </a>
  <a href="https://www.threads.net/@frankm.dev" class="Btn">
    <div class="sign">
      <ThreadsIcon />
    </div>
    <div class="text">Threads</div>
  </a>
  <a href="https://x.com/FrankmDev" class="Btn">
    <div class="sign">
      <XIcon />
    </div>
    <div class="text">Twitter</div>
  </a>
  <a href="https://www.instagram.com/frankm.dev/" class="Btn">
    <div class="sign">
      <InstagramIcon />
    </div>
    <div class="text">Instagram</div>
  </a>
  <a href="mailto:frankmmarindev@gmail.com" class="Btn">
    <div class="sign">
      <MailIcon />
    </div>
    <div class="text">Gmail</div>
  </a>
</div>

<style>
  .Btn {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: none;
    padding: 0.5rem;
    width: 45px;
    height: 45px;
    border-radius: 50%;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transition-duration: 0.3s;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.331);
    background-color: #532ba486;
  }

  .sign {
    width: 100%;
    transition-duration: 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .text {
    position: absolute;
    right: 0%;
    width: 0%;
    opacity: 0;
    color: white;
    font-size: 1em;
    font-weight: 600;
    transition-duration: 0.3s;
    white-space: nowrap;
  }

  .Btn:hover {
    width: 150px;
    border-radius: 40px;
    transition-duration: 0.3s;
    svg {
      margin-right: 10px;
    }
  }

  .Btn:hover .sign {
    width: 35%;
    transition-duration: 0.3s;
    padding-left: 10px;
  }

  .Btn:hover .text {
    opacity: 1;
    width: 65%;
    transition-duration: 0.3s;
  }

  .Btn:active {
    transform: translate(2px, 2px);
  }

  @media (767px>=width) {
    .container {
      justify-content: center;
      gap: 0.5rem;
    }
    .Btn {
      width: 50px;
      height: 50px;
    }
  }
</style>
