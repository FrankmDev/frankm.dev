<div
  class="download-btn text-center rounded-lg relative w-24 h-9 bg-main animate-slide-up cursor-pointer"
>
  <div class="button-wrapper">
    <div class="text flex items-center justify-center top-0 text-xl">CV</div>
    <span class="icon text-white flex items-center justify-center top-full">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        width="32"
        height="32"
        color="#542ca5"
        fill="none"
      >
        <path
          d="M12 14.5L12 4.5M12 14.5C11.2998 14.5 9.99153 12.5057 9.5 12M12 14.5C12.7002 14.5 14.0085 12.5057 14.5 12"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M20 16.5C20 18.982 19.482 19.5 17 19.5H7C4.518 19.5 4 18.982 4 16.5"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </span>
  </div>
</div>
<style>
  .download-btn {
    transition: background 0.3s;
  }

  .button-wrapper,
  .text,
  .icon {
    overflow: hidden;
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    color: #fff;
  }

  .text,
  .icon {
    transition: top 0.5s;
  }

  .download-btn:hover {
    background: transparent;
    border: 2px solid var(--main-color);
    border-radius: 0.5rem;
  }

  .download-btn:hover .text {
    top: -100%;
  }

  .download-btn:hover .icon {
    top: 0;
  }
</style>
