---
import "../styles/global.css";
import BlogCard from "./BlogCard.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
---

<section class="blogGrid grid grid-cols-3 gap-4 mx-auto mt-5">
  {allPosts.map((post) => <BlogCard key={post.frontmatter.slug} post={post} />)}
</section>

<style>
  @media (767px>=width) {
    .blogGrid {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
